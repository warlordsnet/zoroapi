{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    
    "moduleResolution": "Node",
    "outDir": "dist",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
